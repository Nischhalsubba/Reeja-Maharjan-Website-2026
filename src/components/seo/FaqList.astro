---
import type { FaqItem } from '../../content/profile';

interface Props {
  items: FaqItem[];
  title?: string;
  className?: string;
}

const { items, title = 'Frequently Asked Questions', className = '' } = Astro.props as Props;
---

<section class:list={['section-shell section-shell--plain', className]}>
  <p class="section-label">FAQ</p>
  <h2 class="section-title mt-3">{title}</h2>
  <div class="mt-4 grid gap-3">
    {
      items.map((item) => (
        <details class="card-surface p-4">
          <summary class="cursor-pointer list-none font-semibold text-[var(--ink)]">
            {item.question}
          </summary>
          <p class="section-body mt-3 pr-2">{item.answer}</p>
        </details>
      ))
    }
  </div>
</section>

