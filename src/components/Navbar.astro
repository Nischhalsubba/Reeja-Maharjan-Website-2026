---
import Container from './Container.astro';
import { profile } from '../content/profile';

const links = [
  { href: '/#hero', label: 'Home' },
  { href: '/#about', label: 'About' },
  { href: '/#experience', label: 'Experience' },
  { href: '/#credentials', label: 'Credentials' },
  { href: '/#documents', label: 'Documents' },
  { href: '/#skills', label: 'Skills' },
  { href: '/#contact', label: 'Contact' },
];
---

<header class="sticky top-0 z-40 border-b border-[var(--line)] bg-[rgb(248_252_252_/_92%)] backdrop-blur-md">
  <Container className="flex min-h-16 items-center justify-between gap-4">
    <a href="/" class="text-base font-semibold tracking-tight sm:text-lg">{profile.name}</a>

    <nav aria-label="Primary" class="max-w-[56vw] overflow-x-auto">
      <ul class="flex items-center gap-1 py-1">
        {
          links.map((link) => {
            return (
              <li>
                <a
                  href={link.href}
                  class:list={[
                    'whitespace-nowrap rounded-full px-3 py-2 text-xs font-semibold text-[var(--ink-soft)] transition md:text-sm',
                    'hover:bg-white hover:text-[var(--ink)]',
                  ]}
                >
                  {link.label}
                </a>
              </li>
            );
          })
        }
      </ul>
    </nav>

    <button
      type="button"
      class="rounded-full border border-[var(--line)] bg-white px-3 py-2 text-xs font-semibold"
      data-motion-pref-toggle
      aria-pressed="false"
    >
      Reduce motion
    </button>
  </Container>
</header>
