---
import Container from './Container.astro';

const links = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About' },
  { href: '/experience', label: 'Experience' },
  { href: '/credentials', label: 'Credentials' },
  { href: '/skills', label: 'Skills' },
  { href: '/contact', label: 'Contact' },
];

const pathname = Astro.url.pathname;
---

<header class="sticky top-0 z-40 border-b border-[var(--border)] bg-[rgb(246_247_245_/_92%)] backdrop-blur-md">
  <Container className="flex min-h-16 items-center justify-between gap-4">
    <a href="/" class="text-lg font-semibold tracking-tight">{`Reeja`}</a>

    <nav aria-label="Primary" class="max-w-[52vw] overflow-x-auto">
      <ul class="flex items-center gap-1">
        {
          links.map((link) => {
            const active = pathname === link.href;
            return (
              <li>
                <a
                  href={link.href}
                  aria-current={active ? 'page' : undefined}
                  class:list={[
                    'whitespace-nowrap rounded-full px-3 py-2 text-xs font-semibold transition md:text-sm',
                    active
                      ? 'bg-[var(--accent)] text-white'
                      : 'text-[var(--text-muted)] hover:bg-[var(--surface-muted)] hover:text-[var(--text)]',
                  ]}
                >
                  {link.label}
                </a>
              </li>
            );
          })
        }
      </ul>
    </nav>

    <button
      type="button"
      class="rounded-full border border-[var(--border)] px-3 py-2 text-xs font-semibold"
      data-motion-pref-toggle
      aria-pressed="false"
    >
      Reduce motion
    </button>
  </Container>
</header>
