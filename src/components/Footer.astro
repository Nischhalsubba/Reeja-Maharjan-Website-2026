---
import Container from './Container.astro';
import { profile } from '../content/profile';
---

<footer class="mt-16 border-t border-[var(--line)] py-10">
  <Container className="grid gap-6 md:grid-cols-2 md:items-center">
    <div>
      <p class="font-semibold">{profile.name}</p>
      <p class="text-muted mt-1 text-sm">{profile.role}</p>
      <p class="text-muted mt-1 text-sm">{profile.location}</p>
    </div>
    <div class="md:text-right">
      <a href={`mailto:${profile.email}`} class="text-sm font-semibold text-[var(--accent)] hover:underline">
        {profile.email}
      </a>
      <p class="text-muted mt-2 text-sm">
        (c) {new Date().getFullYear()} {profile.name}. All rights reserved.
      </p>
    </div>
  </Container>
</footer>
