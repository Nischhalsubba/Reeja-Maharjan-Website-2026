---
import Container from './Container.astro';
import { profile } from '../content/profile';

interface Props {
  variant?: 'default' | 'source-home';
}

const { variant = 'default' } = Astro.props as Props;
---

<footer class:list={['site-footer', variant === 'source-home' && 'site-footer--source-home']}>
  <Container size={variant === 'source-home' ? 'wide' : 'full'}>
    <div class:list={['footer-shell', variant === 'source-home' && 'footer-shell--source-home']} data-motion="reveal">
      <div class="footer-watermark" aria-hidden="true">{profile.brand.watermarkWord}</div>
      <div class:list={['footer-inner-stage', variant === 'source-home' && 'footer-inner-stage--source-home']}>
        <div class:list={['footer-grid', variant === 'source-home' && 'footer-grid--source-home']}>
          <section>
            <p class="footer-kicker">Portfolio</p>
            <p class="footer-title">{profile.name}</p>
            <p class="footer-copy">{profile.role}</p>
            <p class="footer-copy">{profile.location}</p>
          </section>

          <section>
            <p class="footer-kicker">Navigate</p>
            <ul class="footer-links">
              <li><a href="/#services">Care Areas</a></li>
              <li><a href="/#highlights">Highlights</a></li>
              <li><a href="/#credentials">Credentials</a></li>
              <li><a href="/#documents">Documents</a></li>
            </ul>
          </section>

          <section>
            <p class="footer-kicker">Contact</p>
            <ul class="footer-links">
              <li><a href={`mailto:${profile.email}`}>{profile.email}</a></li>
              <li><a href={`tel:${profile.phone}`}>{profile.phone}</a></li>
              <li><a href={profile.resumePdfPath}>Resume PDF</a></li>
            </ul>
          </section>

          <section>
            <p class="footer-kicker">Role Pages</p>
            <ul class="footer-links">
              {profile.seoPages.slice(0, 6).map((page) => <li><a href={`/${page.slug}/`}>{page.h1}</a></li>)}
            </ul>
          </section>
        </div>

        <div class:list={['footer-meta', variant === 'source-home' && 'footer-meta--source-home']}>
          <span>(c) {new Date().getFullYear()} {profile.name}</span>
          <span>Registered Nurse Portfolio</span>
          <span>Static Astro + Cloudflare Pages</span>
        </div>
      </div>
    </div>
  </Container>
</footer>
