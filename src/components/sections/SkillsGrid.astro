---
import Card from '../Card.astro';
import Container from '../Container.astro';
import SectionHeading from '../SectionHeading.astro';
import { profile } from '../../content/profile';
---

<section class="py-14 md:py-20">
  <Container>
    <SectionHeading
      eyebrow="Skills"
      title="Clinical and collaborative capabilities"
      description="Core nursing competencies, safety standards, and care communication strengths."
    />

    <div class="grid gap-5 md:grid-cols-2" data-skills-grid>
      {
        profile.skills.map((group) => (
          <Card className="h-full">
            <h3 class="text-xl font-semibold">{group.category}</h3>
            <ul class="mt-4 flex flex-wrap gap-2">
              {group.items.map((item) => <li class="subtle-ring bg-[var(--surface-muted)] px-3 py-2 text-sm" data-skill-chip>{item}</li>)}
            </ul>
          </Card>
        ))
      }
    </div>

    <div class="mt-8" data-motion="reveal">
      <h3 class="text-2xl font-semibold">Languages</h3>
      <ul class="mt-4 flex flex-wrap gap-2">
        {profile.languages.map((language) => <li class="subtle-ring px-3 py-2 text-sm">{language}</li>)}
      </ul>
    </div>

    <slot />
  </Container>
</section>
