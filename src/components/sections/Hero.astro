---
import ButtonLink from '../ButtonLink.astro';
import Container from '../Container.astro';
import { profile } from '../../content/profile';
---

<section class="relative py-16 md:py-24">
  <Container className="grid items-center gap-10 md:grid-cols-[1.25fr_1fr]">
    <div data-hero-root>
      <p class="accent-chip subtle-ring inline-flex px-3 py-1 text-sm font-semibold">Nursing Portfolio</p>
      <h1 class="mt-5 max-w-xl text-4xl leading-tight font-semibold md:text-6xl" data-hero-title>
        {profile.name}
      </h1>
      <p class="text-muted mt-3 text-lg md:text-xl" data-hero-subtitle>
        {profile.title}
      </p>
      <p class="text-muted mt-4 max-w-2xl text-base md:text-lg" data-hero-copy>
        {profile.summary.paragraph}
      </p>

      <div class="mt-7 flex flex-wrap items-center gap-3" data-hero-actions>
        <ButtonLink href={profile.resumePdfPath}>Download Resume</ButtonLink>
        <ButtonLink href="/contact" variant="secondary">Contact</ButtonLink>
        <button
          type="button"
          class="cursor-pointer text-sm font-semibold text-[var(--accent)] underline-offset-4 hover:underline"
          data-scroll-target="#home-highlights"
        >
          View highlights
        </button>
      </div>
    </div>

    <div class="card-surface overflow-hidden p-3 md:p-4" data-hero-image-wrap>
      <img
        src="/reeja-headshot.jpg"
        alt="Portrait of Reeja, professional nurse"
        width="960"
        height="1200"
        loading="eager"
        decoding="async"
        class="h-auto w-full rounded-xl object-cover"
        data-hero-image
      />
    </div>
  </Container>
</section>
