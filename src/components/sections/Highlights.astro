---
import Card from '../Card.astro';
import Container from '../Container.astro';
import SectionHeading from '../SectionHeading.astro';
import { profile } from '../../content/profile';
---

<section id="home-highlights" class="py-14 md:py-20">
  <Container>
    <SectionHeading
      eyebrow="Highlights"
      title="Trusted care with measurable consistency"
      description="A concise view of clinical impact, collaboration quality, and patient-first outcomes."
    />

    <div class="grid gap-4 md:grid-cols-3">
      {
        profile.highlights.map((highlight) => (
          <Card className="h-full">
            <p class="text-base leading-relaxed">{highlight}</p>
          </Card>
        ))
      }
    </div>
  </Container>
</section>
