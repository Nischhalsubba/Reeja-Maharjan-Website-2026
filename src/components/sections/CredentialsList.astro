---
import ButtonLink from '../ButtonLink.astro';
import Card from '../Card.astro';
import Container from '../Container.astro';
import SectionHeading from '../SectionHeading.astro';
import { profile } from '../../content/profile';
---

<section class="py-14 md:py-20">
  <Container>
    <SectionHeading
      eyebrow="Credentials"
      title="Education and certifications"
      description="Verified academic background and ongoing professional development."
    />

    <div class="grid gap-5 md:grid-cols-2">
      <Card>
        <h3 class="text-2xl font-semibold">Education</h3>
        <ul class="mt-4 space-y-4">
          {
            profile.education.map((item) => (
              <li>
                <p class="font-semibold">{item.program}</p>
                <p class="text-muted text-sm">
                  {item.institution} · {item.location}
                </p>
                <p class="text-muted text-sm">{item.dates}</p>
              </li>
            ))
          }
        </ul>
      </Card>

      <Card>
        <h3 class="text-2xl font-semibold">Certifications</h3>
        <ul class="mt-4 flex flex-wrap gap-2">
          {
            profile.certifications.map((item) => (
              <li class="subtle-ring bg-[var(--surface-muted)] px-3 py-2 text-sm">
                <p class="font-semibold">{item.name}</p>
                <p class="text-muted">
                  {item.issuer} · {item.year}
                </p>
              </li>
            ))
          }
        </ul>
        <ButtonLink href={profile.resumePdfPath} className="mt-6">
          Download Resume
        </ButtonLink>
      </Card>
    </div>
  </Container>
</section>
