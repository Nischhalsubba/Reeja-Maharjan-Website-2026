---
interface Props {
  className?: string;
  size?: 'stage' | 'stage-tight' | 'narrow' | 'wide' | 'full' | 'source-stage';
}

const { className = '', size = 'narrow' } = Astro.props as Props;

const sizeClassMap: Record<NonNullable<Props['size']>, string> = {
  stage: 'max-w-[860px]',
  'stage-tight': 'max-w-[560px]',
  narrow: 'max-w-[860px]',
  wide: 'max-w-[1120px]',
  full: 'max-w-[1280px]',
  'source-stage': 'max-w-[392px]',
};
---

<div class:list={['mx-auto w-full px-4 sm:px-6', sizeClassMap[size], className]}>
  <slot />
</div>
